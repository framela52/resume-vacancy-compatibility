# ==============================================
# Frontend Environment Variables Template
# ==============================================
# Copy this file to .env and update with your values
# All variables must start with VITE_ to be accessible in the frontend

# ==============================================
# Backend API Configuration
# ==============================================
# Backend API URL (where the FastAPI server is running)
# Development: http://localhost:8000
# Production: https://api.your-domain.com
VITE_API_URL=http://localhost:8000

# API timeout in milliseconds
VITE_API_TIMEOUT=120000

# Enable API request retry
VITE_API_RETRY_ENABLED=true

# Maximum number of API retries
VITE_API_RETRY_MAX_ATTEMPTS=3

# ==============================================
# Application Configuration
# ==============================================
# Application title (displayed in browser tab and header)
VITE_APP_TITLE=Resume Analysis Platform

# Application description (for SEO)
VITE_APP_DESCRIPTION=AI-powered resume analysis platform with ML/NLP processing

# Application version
VITE_APP_VERSION=1.0.0

# ==============================================
# Feature Flags
# ==============================================
# Enable dark mode
VITE_ENABLE_DARK_MODE=false

# Enable analytics (Google Analytics, Plausible, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable error tracking (Sentry, Bugsnag, etc.)
VITE_ENABLE_ERROR_TRACKING=false

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# ==============================================
# Upload Configuration
# ==============================================
# Maximum file upload size in megabytes
VITE_MAX_UPLOAD_SIZE_MB=10

# Allowed file extensions (comma-separated)
VITE_ALLOWED_FILE_TYPES=.pdf,.docx

# Enable drag-and-drop upload
VITE_ENABLE_DRAG_DROP=true

# Enable file preview before upload
VITE_ENABLE_FILE_PREVIEW=true

# ==============================================
# UI Configuration
# ==============================================
# Default language: en, ru
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,ru

# Theme: light, dark, auto
VITE_THEME=light

# Primary color (hex)
VITE_PRIMARY_COLOR=#1976d2

# Secondary color (hex)
VITE_SECONDARY_COLOR=#dc004e

# ==============================================
# Display Configuration
# ==============================================
# Items per page in results
VITE_ITEMS_PER_PAGE=10

# Maximum number of results to display
VITE_MAX_RESULTS=100

# Enable results pagination
VITE_ENABLE_PAGINATION=true

# Show processing time in results
VITE_SHOW_PROCESSING_TIME=true

# Show confidence scores in analysis
VITE_SHOW_CONFIDENCE_SCORES=true

# ==============================================
# Analysis Results Display
# ==============================================
# Highlight matched skills in green
VITE_HIGHLIGHT_MATCHED_SKILLS=true

# Highlight missing skills in red
VITE_HIGHLIGHT_MISSING_SKILLS=true

# Show skill match percentage
VITE_SHOW_MATCH_PERCENTAGE=true

# Show experience verification details
VITE_SHOW_EXPERIENCE_DETAILS=true

# Show grammar/spelling suggestions
VITE_SHOW_GRAMMAR_SUGGESTIONS=true

# ==============================================
# Error Messages
# ==============================================
# Show detailed error messages to users
VITE_SHOW_DETAILED_ERRORS=true

# Enable user-friendly error messages
VITE_FRIENDLY_ERRORS=true

# ==============================================
# Performance Configuration
# ==============================================
# Enable lazy loading for images
VITE_ENABLE_LAZY_LOADING=true

# Enable code splitting
VITE_ENABLE_CODE_SPLITTING=true

# Enable compression
VITE_ENABLE_COMPRESSION=true

# ==============================================
# Analytics Configuration
# ==============================================
# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Plausible analytics domain
# VITE_PLAUSIBLE_DOMAIN=your-domain.com

# PostHog API key
# VITE_POSTHOG_KEY=your-posthog-key
# VITE_POSTHOG_HOST=https://app.posthog.com

# ==============================================
# Error Tracking Configuration
# ==============================================
# Sentry DSN
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Sentry environment (development, staging, production)
# VITE_SENTRY_ENVIRONMENT=development

# ==============================================
# Authentication Configuration (Future)
# ==============================================
# Enable authentication
VITE_ENABLE_AUTH=false

# Auth provider: jwt, oauth, auth0
VITE_AUTH_PROVIDER=jwt

# JWT token storage: localStorage, sessionStorage, cookie
VITE_TOKEN_STORAGE=localStorage

# Session timeout in minutes
VITE_SESSION_TIMEOUT_MINUTES=60

# ==============================================
# Social Sharing Configuration
# ==============================================
# Enable social sharing buttons
VITE_ENABLE_SOCIAL_SHARING=false

# Twitter handle
# VITE_TWITTER_HANDLE=your_twitter_handle

# Facebook page URL
# VITE_FACEBOOK_PAGE=https://facebook.com/your-page

# LinkedIn page URL
# VITE_LINKEDIN_PAGE=https://linkedin.com/company/your-company

# ==============================================
# Help & Support Configuration
# ==============================================
# Help documentation URL
VITE_HELP_DOCS_URL=https://docs.your-domain.com

# Support email
VITE_SUPPORT_EMAIL=support@your-domain.com

# Report issue URL
VITE_REPORT_ISSUE_URL=https://github.com/your-repo/issues

# ==============================================
# Third-Party Integrations
# ==============================================
# Intercom chat widget ID
# VITE_INTERCOM_APP_ID=your-intercom-id

# Crisp chat widget ID
# VITE_CRISP_WEBSITE_ID=your-crisp-id

# UserFeedback project ID
# VITE_USERFEEDBACK_PROJECT_ID=your-project-id

# ==============================================
# Development Settings
# ==============================================
# Enable debug mode
VITE_DEBUG=false

# Enable React DevTools
VITE_ENABLE_REACT_DEVTOOLS=true

# Show component names in DevTools
VITE_SHOW_COMPONENT_NAMES=true

# ==============================================
# Testing Configuration
# ==============================================
# Cypress base URL (for E2E testing)
VITE_CYPRESS_BASE_URL=http://localhost:5173

# Mock API in development
VITE_MOCK_API=false

# ==============================================
# Internationalization (i18n)
# ==============================================
# Default date format: short, medium, long, full
VITE_DATE_FORMAT=medium

# Default time format: short, medium, long
VITE_TIME_FORMAT=short

# Default timezone
VITE_TIMEZONE=UTC

# ==============================================
# File Upload Display
# ==============================================
# Show file upload progress
VITE_SHOW_UPLOAD_PROGRESS=true

# Progress update interval (milliseconds)
VITE_PROGRESS_UPDATE_INTERVAL=500

# ==============================================
# Results Display Configuration
# ==============================================
# Auto-refresh results
VITE_AUTO_REFRESH_RESULTS=true

# Results refresh interval (milliseconds)
VITE_RESULTS_REFRESH_INTERVAL=5000

# Maximum auto-refresh duration (milliseconds)
VITE_MAX_REFRESH_DURATION=60000

# ==============================================
# Accessibility Configuration
# ==============================================
# Enable ARIA labels
VITE_ENABLE_ARIA_LABELS=true

# Enable keyboard navigation
VITE_ENABLE_KEYBOARD_NAVIGATION=true

# Enable screen reader support
VITE_ENABLE_SCREEN_READER=true

# ==============================================
# Notification Configuration
# ==============================================
# Enable browser notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=false

# Notification duration (milliseconds)
VITE_NOTIFICATION_DURATION=5000

# Notification position: top-left, top-right, bottom-left, bottom-right
VITE_NOTIFICATION_POSITION=top-right

# ==============================================
# Export Configuration
# ==============================================
# Enable PDF export
VITE_ENABLE_PDF_EXPORT=false

# Enable CSV export
VITE_ENABLE_CSV_EXPORT=false

# Enable JSON export
VITE_ENABLE_JSON_EXPORT=true

# ==============================================
# Cache Configuration
# ==============================================
# Enable application cache
VITE_ENABLE_CACHE=true

# Cache duration (milliseconds)
VITE_CACHE_DURATION=300000

# Clear cache on logout
VITE_CLEAR_CACHE_ON_LOGOUT=true

# ==============================================
# Rate Limiting (Client-Side)
# ==============================================
# Enable client-side rate limiting
VITE_ENABLE_RATE_LIMITING=true

# Maximum requests per minute
VITE_MAX_REQUESTS_PER_MINUTE=60

# ==============================================
# URL Configuration
# ==============================================
# Base path (if app is deployed to subdirectory)
# VITE_BASE_PATH=/resume-analysis/

# Build output directory
# VITE_OUT_DIR=dist

# ==============================================
# SEO Configuration
# ==============================================
# Site name
VITE_SITE_NAME=Resume Analysis Platform

# Site URL
VITE_SITE_URL=http://localhost:5173

# Default image for social sharing
VITE_DEFAULT_OG_IMAGE=/og-image.png

# Twitter card type: summary, summary_large_image
VITE_TWITTER_CARD_TYPE=summary_large_image

# ==============================================
# Notes
# ==============================================
# 1. All environment variables must start with VITE_ prefix
# 2. Changes to .env require restarting the dev server
# 3. Never commit sensitive data to .env file
# 4. Use different values for development, staging, and production
# 5. Test all configuration values before deploying to production
# 6. Access variables in code: import.meta.env.VITE_VARIABLE_NAME

